{
  "compilerOptions": {

    "module": "ESNext",
    "target": "es2020",
    "declaration": true,
    "moduleResolution": "node",

    "noImplicitAny": false,
    "allowJs": false,
    "removeComments": false,
    "declarationMap": true,
    "inlineSources": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "rootDir": "./source",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "./build"
  ],
  "include": [
    "./source"
  ]
}